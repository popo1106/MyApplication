<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    android:background="@color/colorAccent"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recImage"
            android:src="@drawable/noimagecard"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/recImage"

            android:orientation="vertical">

            <TextView
                android:id="@+id/recTitle"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="class"
                android:textColor="@color/lavender"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/recDesc"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:gravity="left"
                android:text="role"
                android:textColor="@color/lavender"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/seconde"
            android:layout_toEndOf="@id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_marginRight="10dp"
            >
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recPriority"
            android:text="name"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="@color/lavender"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recTime"
            android:text="time"

            android:layout_marginStart="20dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="@color/lavender"
            android:textSize="14sp"
            />
        </LinearLayout>
        <LinearLayout
        android:id="@+id/third"
        android:layout_toEndOf="@id/seconde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
            <View
                android:id="@+id/colorStripe"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@color/green" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>